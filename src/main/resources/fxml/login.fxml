<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ghostvault.ui.LoginController">
   
   <!-- Top Bar with Theme Toggle -->
   <HBox alignment="TOP_RIGHT">
      <ToggleButton fx:id="themeToggleButton" onAction="#toggleTheme" styleClass="theme-toggle" text="ðŸŒ™" />
   </HBox>
   
   <!-- Main Login Content -->
   <VBox alignment="CENTER" spacing="20.0" VBox.vgrow="ALWAYS">
      <padding>
         <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
      </padding>
      
      <!-- Title Section -->
      <Label fx:id="titleLabel" styleClass="app-title" text="GhostVault" />
      <Label fx:id="subtitleLabel" styleClass="app-subtitle" text="Secure File Vault" />
      
      <!-- Login Form -->
      <VBox alignment="CENTER" spacing="15.0">
         <Label styleClass="instruction-label" text="Enter Password" />
         <PasswordField fx:id="passwordField" maxWidth="300.0" onAction="#handleLogin" promptText="Password" styleClass="login-password-field" />
         <Button fx:id="loginButton" onAction="#handleLogin" prefWidth="120.0" styleClass="primary-button" text="Access Vault" />
         <Label fx:id="statusLabel" styleClass="error-label" />
      </VBox>
      
      <!-- Footer Actions -->
      <HBox alignment="CENTER" spacing="15.0">
         <Button fx:id="helpButton" onAction="#showHelp" styleClass="secondary-button" text="Help (F1)" />
         <Button fx:id="exitButton" onAction="#handleExit" styleClass="secondary-button" text="Exit" />
      </HBox>
      
      <!-- Security Notice -->
      <Label styleClass="security-notice" text="ðŸ”’ All data is encrypted with AES-256" />
   </VBox>
</VBox>